class Heroi {
    constructor(nome, idade, tipo) {
        this.nome = nome;
        this.idade = idade;
        this.tipo = tipo;
    }

    atacar() {
        let ataque;

        switch (this.tipo.toLowerCase()) {
            case 'mago':
                ataque = 'magia';
                break;
            case 'guerreiro':
                ataque = 'espada';
                break;
            case 'monge':
                ataque = 'artes marciais';
                break;
            case 'ninja':
                ataque = 'shuriken';
                break;
            default:
                ataque = 'um ataque desconhecido';
        }

        console.log(`O ${this.tipo} atacou usando ${ataque}`);
    }
}

// Test
const AreaDosHerois = [
    new Heroi("Gandalf", 2000, "Mago"),
    new Heroi("Aragorn", 87, "Guerreiro"),
    new Heroi("Bruce Lee", 32, "Monge"),
    new Heroi("Hanzo", 25, "Ninja")
]

for (let i = 0; i < AreaDosHerois.length; i++) {
    AreaDosHerois[i].atacar();
}
